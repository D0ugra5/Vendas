<div class="row row-cols-1 row-cols-md-3">
    {{#each postagens }}
  
    <div class="col mb-4">
    
        <div class="card ">
            
            <img src="/upload/{{nomeImagem}}"  width="200px" height="300" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">{{titulo}}</h5>
                <p class="card-text">{{conteudo}}.</p>
              
                     <a href="/postagens/{{_id}}" class="btn btn-primary">Comprar</a>
            </div>



        </div>
     
      
    </div>
 {{else}}
 
 <h5>Nenhuma Postagem cadastrada </h5><br>
 



 <div>Nenhum Produto para Ser Exibido</div>


    
    {{/each}}
   
 
</div>